@echo off

SET TODAY=%DATE:~0,4%%DATE:~5,2%%DATE:~8,2%
SET NIPPOU_FOLDER=%SHORTCUT_DOCUMENT_FOLDER%\nippo
FOR /F "" %%i in ('dir %NIPPOU_FOLDER% /B /ON') do SET LAST_FILE=%%i
SET /A LINE_CNT=0


IF "%1" == "" (
  If NOT EXIST %NIPPOU_FOLDER%\%TODAY%.txt (
    Nippou.vbs %TODAY% %NIPPOU_FOLDER%\%LAST_FILE%
    START /D%NIPPOU_FOLDER%\ /B %TODAY%.txt
  ) ELSE (
    START /D%NIPPOU_FOLDER%\ /B %TODAY%.txt
  )
  GOTO EOF
) ELSE (
  GOTO FOLDER_OPEN
)

:FOLDER_OPEN
explorer /e,/root,%NIPPOU_FOLDER%

:EOF

